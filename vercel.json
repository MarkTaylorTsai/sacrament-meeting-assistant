{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/webhook.ts": {
      "maxDuration": 30
    },
    "api/reminder.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/reminder",
      "destination": "/api/reminder"
    }
  ]
}
